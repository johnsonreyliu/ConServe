<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group4.isds577.conserve.MenuActivity"
    android:background="#ff33b5e5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/topBar"
        android:weightSum="1">

        <ImageView
            android:layout_width="252dp"
            android:layout_height="56dp"
            android:id="@+id/banner_conserve"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/conserve_banner"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:adjustViewBounds="false" />
    </LinearLayout>

    <ImageButton
        android:layout_width="171dp"
        android:layout_height="163dp"
        android:id="@+id/imageButton"
        android:src="@mipmap/water_icon"
        android:background="#00000000"
        android:scaleType="center"
        android:layout_below="@+id/topBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="openWaterPage" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="163dp"
        android:id="@+id/imageButton2"
        android:src="@mipmap/electricity_icon"
        android:background="#00000000"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignLeft="@+id/ProfileButton"
        android:layout_alignStart="@+id/ProfileButton"
        android:onClick="openElectricityPage" />

    <ImageButton
        android:layout_width="171dp"
        android:layout_height="163dp"
        android:id="@+id/imageButton3"
        android:src="@mipmap/waste_icon"
        android:background="#00000000"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        android:onClick="openWastePage" />

    <ImageButton
        android:layout_width="171dp"
        android:layout_height="163dp"
        android:id="@+id/ProfileButton"
        android:src="@mipmap/profile_icon"
        android:background="#00000000"
        android:layout_gravity="bottom"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="openProfile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Water"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Electricity"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:layout_below="@+id/imageButton2"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Waste"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:layout_below="@+id/ProfileButton"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My Profile"
        android:id="@+id/textView5"
        android:textColor="#ffffff"
        android:layout_below="@+id/ProfileButton"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

</RelativeLayout>
